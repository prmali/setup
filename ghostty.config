# ----- Appearance -----
theme = "Catppuccin Mocha"
font-family = "JetBrainsMonoNL Nerd Font"
font-size = 13
window-padding-x = 8
window-padding-y = 8
cursor-style = "beam"

# Transparency + blur (macOS)
background-opacity = 0.90      # 0..1  (restart app to apply)
background-blur = 24           # true|false|integer radius

# macOS: treat Option as Alt for shell word-jumps, etc.
macos-option-as-alt = true

# ----- Behavior -----
copy-on-select = false

# ----- “Warp-like” quick navigation -----
# Ctrl+←/→ : jump by word (send ESC-b / ESC-f)
keybind = ctrl+left=esc:b
keybind = ctrl+right=esc:f

# Cmd+←/→ : start/end of line (^A / ^E)
keybind = cmd+left=text:\x01
keybind = cmd+right=text:\x05

# Tabs
keybind = cmd+t=new_tab
keybind = shift+cmd+]=next_tab
keybind = shift+cmd+[=prev_tab
