# Ghostty Terminal Configuration

# ----- Appearance -----
theme = "Catppuccin Mocha"
font-family = "JetBrainsMonoNL Nerd Font"
font-size = 13

window-padding-x = 8
window-padding-y = 8

# Window size (columns x rows)
window-width = 160
window-height = 35

cursor-style = bar
cursor-style-blink = true

# Transparency and blur (restart to apply)
background-opacity = 0.80
background-blur = 32

# ----- Shell Integration -----
shell-integration = detect
shell-integration-features = cursor,sudo,title

# ----- Behavior -----
scrollback-limit = 10000
mouse-hide-while-typing = true
copy-on-select = false
clipboard-trim-trailing-spaces = true

# ----- macOS Specific -----
macos-option-as-alt = true
macos-titlebar-style = tabs
macos-window-shadow = true

# ----- Navigation Keybindings -----
# Word jumping
keybind = ctrl+left=text:\x1bb
keybind = ctrl+right=text:\x1bf

# Word selection
keybind = ctrl+shift+left=text:\x1b[1;6D
keybind = ctrl+shift+right=text:\x1b[1;6C

# Line jumping
keybind = cmd+left=text:\x01
keybind = cmd+right=text:\x05

# Line selection
keybind = cmd+shift+left=text:\x1b[1;10H
keybind = cmd+shift+right=text:\x1b[1;10F

# Scroll to top/bottom
keybind = cmd+up=scroll_to_top
keybind = cmd+down=scroll_to_bottom

# Line movement (editor support)
keybind = ctrl+shift+up=text:\x1b[1;6A
keybind = ctrl+shift+down=text:\x1b[1;6B

# ----- Tab Management -----
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = shift+cmd+]=next_tab
keybind = shift+cmd+[=prev_tab

# Jump to specific tabs
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = cmd+6=goto_tab:6
keybind = cmd+7=goto_tab:7
keybind = cmd+8=goto_tab:8
keybind = cmd+9=goto_tab:9

# ----- Window Management -----
keybind = cmd+n=new_window

# ----- Split Management -----
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
#keybind = cmd+shift+w=close_surface

# Navigate splits
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:top
keybind = cmd+alt+down=goto_split:bottom

# Resize splits
keybind = cmd+shift+alt+left=resize_split:left,10
keybind = cmd+shift+alt+right=resize_split:right,10
keybind = cmd+shift+alt+up=resize_split:up,10
keybind = cmd+shift+alt+down=resize_split:down,10

# Equalize splits
keybind = cmd+shift+e=equalize_splits

# ----- Utility Keybindings -----
keybind = cmd+f=text:\x06
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size
keybind = cmd+k=clear_screen
keybind = cmd+shift+r=reload_config
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+shift+i=inspector:toggle
